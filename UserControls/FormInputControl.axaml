<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:uc="using:LinuxInstaller.UserControls"
             mc:Ignorable="d"
             x:Class="LinuxInstaller.UserControls.FormInputControl"
             x:DataType="uc:FormInputControl">
    <StackPanel Spacing="4">
        <TextBlock Text="{Binding Label}" Classes="BodySmall"/>
        <TextBox Text="{Binding Text, Mode=TwoWay}" Watermark="{Binding Watermark}"
                 Background="{StaticResource SurfaceVariantBrush}"
                 Foreground="{StaticResource OnSurfaceVariantBrush}"
                 CornerRadius="4"
                 BorderThickness="0"
                 Height="56"
                 Padding="16,0"/>
    </StackPanel>
</UserControl>