<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="LinuxInstaller.UserControls.SummaryCardControl">
    <Border Classes="Card" Padding="16" CornerRadius="12">
        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <PathIcon Data="{Binding IconData}" Width="24" Height="24"/>
                <TextBlock Text="{Binding Title}" Classes="HeadlineSmall"/>
            </StackPanel>
            <ItemsControl ItemsSource="{Binding Details}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="{Binding Label}" Classes="BodyMedium" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Value}" Classes="BodyMedium"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Edit" HorizontalAlignment="Right" Classes="Text"/>
        </StackPanel>
    </Border>
</UserControl>