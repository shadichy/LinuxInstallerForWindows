<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="LinuxInstaller.UserControls.HeaderControl"
             d:DesignWidth="800" d:DesignHeight="50">
    <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center" Padding="16">
        <StackPanel Orientation="Horizontal" Grid.Column="0">
            <!-- Logo/App Title Block -->
            <PathIcon Data="{StaticResource IconLogo}" Width="24" Height="24" Margin="0,0,8,0"/>
            <TextBlock Text="Linux Installer" Classes="HeadlineSmall"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Column="2">
            <!-- Window Controls / Other Buttons -->
            <Button Content="Help" Margin="4,0"/>
            <Button Content="Close" Margin="4,0"/>
        </StackPanel>
    </Grid>
</UserControl>