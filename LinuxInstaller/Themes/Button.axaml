<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!-- Global -->
    <Style Selector="Button">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Margin" Value="8 0" />
        <Setter Property="Padding" Value="16 0" />
        <Setter Property="ClipToBounds" Value="False" />
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Style Selector="^:checked">
            <Setter Property="Background" Value="{DynamicResource TertiaryBrush}"/>
        </Style>

		<!-- Combination Categories -->

		<!-- 1. Elevated Button -->
        <Style Selector="^.Elevated">
            <Setter Property="Background" Value="{DynamicResource SurfaceLowBrush}"/>
            <Style Selector="^ TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            </Style>
            <Style Selector="^:pointerover /template/ ContentPresenter">
                <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            </Style>
            <Style Selector="^:disabled /template/ ContentPresenter">
                <Setter Property="Background" Value="{DynamicResource SurfaceHighestBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource SurfaceLowBrush}"/>
            </Style>
        </Style>

		<!-- 2. Filled Button -->
        <Style Selector="^.Filled">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnPrimaryBrush}"/>
            <Style Selector="^ TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource OnPrimaryBrush}"/>
            </Style>
            <Style Selector="^:pointerover /template/ ContentPresenter">
                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource OnPrimaryBrush}"/>
                <Setter Property="Opacity" Value="0.9"/>
            </Style>
            <Style Selector="^:disabled /template/ ContentPresenter">
                <Setter Property="Background" Value="{DynamicResource SurfaceHighestBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource SurfaceLowBrush}"/>
            </Style>
        </Style>

		<!-- 3. Tonal Button -->
        <Style Selector="^.Tonal">
            <Setter Property="Background" Value="{DynamicResource PrimaryContainerBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource OnPrimaryContainerBrush}"/>
            <Style Selector="^ TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource OnPrimaryContainerBrush}"/>
            </Style>
            <Style Selector="^:pointerover /template/ ContentPresenter">
                <Setter Property="Background" Value="{DynamicResource SecondaryContainerBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource OnSecondaryContainerBrush}"/>
                <Setter Property="Opacity" Value="0.9"/>
            </Style>
            <Style Selector="^:disabled /template/ ContentPresenter">
                <Setter Property="Background" Value="{DynamicResource SurfaceHighestBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource SurfaceLowBrush}"/>
            </Style>
        </Style>

		<!-- 4. Outlined Button -->
        <Style Selector="^.Outlined">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource OutlineBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style Selector="^ TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            </Style>
            <Style Selector="^:pointerover /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="{DynamicResource OutlineBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            </Style>
            <Style Selector="^:disabled /template/ ContentPresenter">
                <Setter Property="BorderBrush" Value="{DynamicResource SurfaceHighestBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource SurfaceLowBrush}"/>
            </Style>
        </Style>

		<!-- 5. Text Button -->
        <Style Selector="^.Text">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12 0"/>
            <Style Selector="^ TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            </Style>
            <Style Selector="^:pointerover /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            </Style>
            <Style Selector="^:disabled /template/ ContentPresenter">
                <Setter Property="Foreground" Value="{DynamicResource SurfaceLowBrush}"/>
            </Style>
        </Style>

		<!-- 6. Icon Button -->
        <Style Selector="^.Icon /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Style Selector="^:pointerover /template/ ContentPresenter">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
            </Style>
            <Style Selector="^:disabled /template/ ContentPresenter">
                <Setter Property="Foreground" Value="{DynamicResource SurfaceLowBrush}"/>
            </Style>
        </Style>

		<!-- Sizes -->
        <Style Selector="^.ExtraSmall">
            <Setter Property="Height" Value="24"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8 0"/>
            <Setter Property="CornerRadius" Value="12"/>
        </Style>
        <Style Selector="^.Small">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12 0"/>
            <Setter Property="CornerRadius" Value="16"/>
        </Style>
        <Style Selector="^.Medium">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16 0"/>
            <Setter Property="CornerRadius" Value="20"/>
        </Style>
        <Style Selector="^.Large">
            <Setter Property="Height" Value="48"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="20 0"/>
            <Setter Property="CornerRadius" Value="24"/>
        </Style>
        <Style Selector="^.ExtraLarge">
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="24 0"/>
            <Setter Property="CornerRadius" Value="28"/>
        </Style>
		
		<!-- Shapes -->
        <Style Selector="^.Square">
            <Setter Property="CornerRadius" Value="16"/>
            <Style Selector="^.ExtraSmall">
                <Setter Property="CornerRadius" Value="12"/>
            </Style>
            <Style Selector="^.Small">
                <Setter Property="CornerRadius" Value="12"/>
            </Style>
            <Style Selector="^.Large">
                <Setter Property="CornerRadius" Value="28"/>
            </Style>
            <Style Selector="^.ExtraLarge">
                <Setter Property="CornerRadius" Value="28"/>
            </Style>
        </Style>
		
		<!-- Global (Enforcing styles) -->
		<Style Selector="^:disabled TextBlock">
			<Setter Property="Foreground" Value="{DynamicResource OnSecondaryContainer}"/>
			<Setter Property="Opacity" Value="0.38" />
		</Style>
    </Style>
</Styles>