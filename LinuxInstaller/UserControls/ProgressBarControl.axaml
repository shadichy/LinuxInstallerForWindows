<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LinuxInstaller.UserControls.ProgressBarControl">
    <ProgressBar Value="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 IsIndeterminate="{Binding IsIndeterminate, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Center"/>
</UserControl>