<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LinuxInstaller.ViewModels"
             xmlns:uc="using:LinuxInstaller.UserControls"
             xmlns:models="using:LinuxInstaller.Models"
             mc:Ignorable="d"
             x:Class="LinuxInstaller.Views.InstallationSummaryView"
             x:DataType="vm:InstallationSummaryViewModel"
             d:DesignWidth="800" d:DesignHeight="600">
	<Design.DataContext>
		<vm:InstallationSummaryViewModel/>
	</Design.DataContext>
	<Grid RowDefinitions="Auto,*,Auto, Auto" Classes="Card">
		<StackPanel Grid.Row="0" Margin="16">
			<TextBlock Text="Installation Summary" Classes="HeadlineMedium" HorizontalAlignment="Center" FontWeight="Bold" FontSize="24"/>
			<TextBlock Text="Review your selections before proceeding." Classes="BodyMedium" HorizontalAlignment="Center"/>
		</StackPanel>

		<ScrollViewer Grid.Row="1" Margin="16,0">
			<StackPanel Orientation="Vertical" Spacing="16">
				<!-- Distribution Summary -->
				<uc:TileCardControl Title="Distribution"
                                    Icon="&#xE019;"
                                    IsVisible="{Binding IsDistroSelected}"
                                    Content="{Binding DistroSummaryContent}"/>

				<!-- Workflow Type Summary -->
				<uc:TileCardControl Title="Installation Type"
                                    Icon="&#xE31E;"
                                    IsVisible="{Binding IsWorkflowSelected}"
                                    Content="{Binding WorkflowSummaryContent}"/>

				<!-- User Account Summary -->
				<uc:TileCardControl Title="User Account"
                                    Icon="&#xE31E;"
                                    IsVisible="{Binding IsUserInfoAvailable}"
                                    Content="{Binding UserSummaryContent}"/>

				<!-- Partitions Summary -->
				<uc:TileCardControl Title="Partitions"
                                    Icon="&#xE161;"
                                    IsVisible="{Binding IsPartitionPlanAvailable}"
                                    Content="{Binding PartitionSummaryContent}"/>

			</StackPanel>
		</ScrollViewer>
		
		<Border Grid.Row="2" Background="{StaticResource ErrorBrush}" Padding="8" CornerRadius="8" Margin="16">
			<TextBlock Text="Warning: This action will modify your disk partitions. Data loss may occur if interrupted." Foreground="{StaticResource OnErrorBrush}" TextWrapping="Wrap"/>
		</Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="16">
            <Button Content="Back" Classes="Text" Command="{Binding GoBackCommand}" HorizontalAlignment="Left"/>
            <Button Content="Install" Classes="Filled" Margin="8,0,0,0" Command="{Binding InstallCommand}" HorizontalAlignment="Right"/>
        </StackPanel>
	</Grid>
</UserControl>