<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LinuxInstaller.ViewModels"
             xmlns:uc="using:LinuxInstaller.UserControls"
             mc:Ignorable="d"
             x:Class="LinuxInstaller.Views.LoadingView"
             d:DesignWidth="400" d:DesignHeight="300">
    <Design.DataContext>
        <vm:LoadingViewModel/>
    </Design.DataContext>
    <Grid Classes="Card" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="32">
            <PathIcon Data="{StaticResource IconHourglass}" Width="64" Height="64" HorizontalAlignment="Center"/>
            <TextBlock Text="Loading System Information..." Classes="HeadlineMedium" HorizontalAlignment="Center"/>
            <TextBlock Text="This may take a moment." Classes="BodyMedium" HorizontalAlignment="Center"/>
            <!-- uc:ProgressBarControl will go here -->
            <uc:ProgressBarControl Value="50"/>
        </StackPanel>
    </Grid>
</UserControl>