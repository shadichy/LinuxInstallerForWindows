<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LinuxInstaller.ViewModels"
             mc:Ignorable="d"
             x:Class="LinuxInstaller.Views.PartitionOptionPickerView"
             d:DesignWidth="800" d:DesignHeight="600">
    <Design.DataContext>
        <vm:PartitionOptionPickerViewModel/>
    </Design.DataContext>
    <Grid RowDefinitions="Auto,*,Auto" Classes="Card">
        <StackPanel Grid.Row="0" Margin="16">
            <TextBlock Text="Partitioning Options" Classes="HeadlineMedium" HorizontalAlignment="Center"/>
            <TextBlock Text="How would you like to manage your disk partitions?" Classes="BodyMedium" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
            <Button Content="Automatic Partitioning" Classes="Filled" Width="250"/>
            <Button Content="Manual Partitioning" Classes="Filled" Width="250"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="16">
            <Button Content="Back" Classes="Text"/>
            <Button Content="Next" Classes="Filled" Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>