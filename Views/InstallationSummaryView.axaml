<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LinuxInstaller.ViewModels"
             xmlns:uc="using:LinuxInstaller.UserControls"
             xmlns:models="using:LinuxInstaller.Models"
             mc:Ignorable="d"
             x:Class="LinuxInstaller.Views.InstallationSummaryView"
             d:DesignWidth="800" d:DesignHeight="600">
    <Design.DataContext>
        <vm:InstallationSummaryViewModel/>
    </Design.DataContext>
    <Grid RowDefinitions="Auto,*,Auto" Classes="Card">
        <StackPanel Grid.Row="0" Margin="16">
            <TextBlock Text="Installation Summary" Classes="HeadlineMedium" HorizontalAlignment="Center"/>
            <TextBlock Text="Review your selections before proceeding." Classes="BodyMedium" HorizontalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="16,0">
            <StackPanel Orientation="Vertical" Spacing="16">
                <!-- Distribution Summary -->
                <uc:SummaryCardControl Title="Distribution" IconData="{StaticResource IconDistro}" IsVisible="{Binding SelectedDistro, Converter={x:Static BoolToBrushConverter}}">
                    <uc:SummaryCardControl.Details>
                        <uc:DetailItem Label="Name" Value="{Binding SelectedDistro.Name}"/>
                        <uc:DetailItem Label="Description" Value="{Binding SelectedDistro.Description}"/>
                        <uc:DetailItem Label="Size" Value="{Binding SelectedDistro.Size, StringFormat='{}{0} bytes'}"/>
                    </uc:SummaryCardControl.Details>
                </uc:SummaryCardControl>

                <!-- Workflow Type Summary -->
                <uc:SummaryCardControl Title="Installation Type" IconData="{StaticResource IconInstall}" IsVisible="{Binding SelectedWorkflow, Converter={x:Static BoolToBrushConverter}}">
                    <uc:SummaryCardControl.Details>
                        <uc:DetailItem Label="Type" Value="{Binding SelectedWorkflow}"/>
                    </uc:SummaryCardControl.Details>
                </uc:SummaryCardControl>

                <!-- User Account Summary -->
                <uc:SummaryCardControl Title="User Account" IconData="{StaticResource IconHourglass}" IsVisible="{Binding UserInfo.Username, Converter={x:Static BoolToBrushConverter}}">
                    <uc:SummaryCardControl.Details>
                        <uc:DetailItem Label="Full Name" Value="{Binding UserInfo.FullName}"/>
                        <uc:DetailItem Label="Username" Value="{Binding UserInfo.Username}"/>
                        <uc:DetailItem Label="Auto Login" Value="{Binding UserInfo.AutoLogin}"/>
                        <uc:DetailItem Label="Require Password" Value="{Binding UserInfo.RequirePasswordOnLogin}"/>
                    </uc:SummaryCardControl.Details>
                </uc:SummaryCardControl>

                <!-- Partitions Summary -->
                <uc:SummaryCardControl Title="Partitions" IconData="{StaticResource IconPartition}" IsVisible="{Binding PartitionPlan.TargetDisk, Converter={x:Static BoolToBrushConverter}}">
                    <uc:SummaryCardControl.Details>
                        <uc:DetailItem Label="Target Disk" Value="{Binding PartitionPlan.TargetDisk.Name}"/>
                        <uc:DetailItem Label="Shrink Size" Value="{Binding PartitionPlan.ShrinkSizeInMB, StringFormat='{}{0} MB'}"/>
                        <!-- TODO: Display planned Linux partitions from PartitionPlan.LinuxPartitions -->
                    </uc:SummaryCardControl.Details>
                </uc:SummaryCardControl>

                <Border Background="{StaticResource ErrorContainerBrush}" Padding="8" CornerRadius="4" Margin="0,16,0,0">
                    <TextBlock Text="Warning: This action will modify your disk partitions. Data loss may occur if interrupted." Foreground="{StaticResource OnErrorContainerBrush}" TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="16">
            <Button Content="Back" Classes="Text"/>
            <Button Content="Install" Classes="Filled" Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>